@using prjTravelAlbumSys.Models;

@model IEnumerable<prjTravelAlbumSys.Models.TComment>

@{
    ViewData["Title"] = "照片評論";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
    var album = ViewBag.Album as TAlbum;
}

<h4>照片評論</h4>

<div class="row">
    <div class="col-12 col-md-6">

        <div class="card">
            <img class="card-img-top" src="~/Album/@album.FAlbum" />
            <div class="card-img-overlay">
                <p class="text-white p-2" style="position:relative;margin-top:50%;background-color:rgb(129 109 109 / 0.58)">
                    <strong>@album.FTitle</strong><br />
                    <span>@album.FDescription</span><br />
                    發佈時間：@album.FReleaseTime<br />
                    評論數量：@album.FCommentNum
                </p>
            </div>
        </div>


        <form asp-action="CommentCreate" class="mt-5">
            <div class="form-group">
                <label class="control-label">評論</label>
                <textarea name="Comment" class="form-control" required></textarea>
                <input type="hidden" name="AlbumId" value="@album.FAlbumId" />
            </div>
            <div class="form-group">
                <input type="submit" value="新增評論" class="btn btn-info" />
            </div>
        </form>
    </div>

    <div class="col-12 col-md-6">
        <div style="overflow:auto;height:700px;">
            @foreach (var item in Model)
            {
                <div class="card mb-2">
                    <div class="card-body">
                        <h5 class="text-primary">@item.FName</h5>
                        <p>@item.FComment</p>
                        <p>@item.FReleaseTime</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>





